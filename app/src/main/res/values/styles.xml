<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="SignInTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.SelectedItem" parent="Widget.Design.BottomNavigationView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimePicker">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert.DarkText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
