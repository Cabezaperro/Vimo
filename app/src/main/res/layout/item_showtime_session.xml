<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100">

        <ImageView
            android:id="@+id/imvShowtimeSessionItemPoster"
            android:layout_width="60dp"
            android:layout_height="80dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/txvShowtimeSessionItemMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Movie"
                android:textSize="22sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txvShowtimeSessionItemCinema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Cinema"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imvShowtimeSessionItemFavourite"
        android:tag="notfav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleY="1.2"
        android:scaleX="1.2"
        android:layout_marginEnd="8dp"
        android:src="@drawable/star_full"/>

</LinearLayout>