<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:tint="@color/primaryLightColor"
        android:tintMode="multiply"
        app:srcCompat="@drawable/film" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/headerPadding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civNavigationProfileImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="42dp"
            android:scaleType="centerCrop"
            android:src="@drawable/elvis_glasses_cut_2"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txvNavigationUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            android:text="@string/usernameCabezaperro"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/txvNavigationEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emailCabezaperro"
            android:textColor="@color/primaryTextColor" />

    </LinearLayout>

</RelativeLayout>